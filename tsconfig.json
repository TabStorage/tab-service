{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "@middlewares/*": ["middlewares/*"],
            "@utils/*": ["utils/*"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@controllers/*": ["controllers/*"],
            "@config/*": ["config/*"],
        }
    },
    "include": [
        "src/**/*"
    ],
}