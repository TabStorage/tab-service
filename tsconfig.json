{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@middlewares/*": ["src/middlewares/*"],
            "@utils/*": ["src/utils/*"],
            "@models/*": ["src/models/*"],
            "@routes/*": ["src/routes/*"],
            "@controllers/*": ["src/controllers/*"],
            "@config/*": ["src/config/*"],
            "*": ["src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
}